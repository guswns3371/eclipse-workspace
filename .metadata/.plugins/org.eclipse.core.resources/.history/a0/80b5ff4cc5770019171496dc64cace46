	static int user_menu() {
		System.out.println("*********************");
		System.out.println("      1.대    출                   ");
		System.out.println("      2.반    납                   ");
		System.out.println("      3.조    회                   ");
		System.out.println("      4.예    약                   ");
		System.out.println("      5.exit         ");
		System.out.println("*********************");
		System.out.print("input menu number : ");
		int num = input.nextInt();
		
		return num;
	}
	
	static int admin_menu() {
		System.out.println("*********************");
		System.out.println("      1.대    출                   ");
		System.out.println("      2.반    납                   ");
		System.out.println("      3.책목록 관리             ");
		System.out.println("      4.exit         ");
		System.out.println("*********************");
		
		System.out.print("input menu number : ");
		int num = input.nextInt();
		
		return num;
	}
	
	static void student_act(Student student, int user_menu_num) {
		switch (user_menu_num) {
		case 1:
			student.대출();
			break;
		case 2:
			student.반납();
			break;
		case 3:
			student.조회();
			break;
		case 4:
			student.예약();
			break;
		case 5:
			student.나가기();
			break;
		default:
			System.out.println("error");
			break;
		}
		student.display_info();
	}
	
	static void faculty_act(Faculty faculty, int user_menu_num ) {
		switch (user_menu_num) {
		case 1:
			faculty.대출();
			break;
		case 2:
			faculty.반납();
			break;
		case 3:
			faculty.조회();
			break;
		case 4:
			faculty.예약();
			break;
		case 5:
			faculty.나가기();
			break;
		default:
			System.out.println("error");
			break;
		}
		faculty.display_info();
	}
	
	static void admin_act(Admin admin, int admin_menu_num) {
		switch (admin_menu_num) {
		case 1:
			admin.대출처리();
			break;
		case 2:
			admin.반납처리();
			break;
		case 3:
			admin.사용자_배열정보();
			break;
		case 4:
			admin.나가기();
			break;
		default:
			System.out.println("error");
			break;
		}
	}
}
